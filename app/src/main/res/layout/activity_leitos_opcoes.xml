<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cursoandroid.testefb.LeitosOpcoesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Listar Leitos por Status"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ocupado"
        android:onClick="listarOcupados"
        android:id="@+id/ocupados"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Aguardando Higienização"
        android:onClick="listarAguardandoHigienizacao"
        android:id="@+id/aguardandoHigienizacao"
        android:layout_below="@+id/ocupados"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Em Higienização"
        android:onClick="listarEmHigienizacao"
        android:id="@+id/emHigienizacao"
        android:layout_below="@+id/aguardandoHigienizacao"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Aguardando Forragem"
        android:onClick="listarAguardandoForragem"
        android:id="@+id/aguardandoForragem"
        android:layout_below="@+id/emHigienizacao"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Em Forragem"
        android:onClick="listarEmForragem"
        android:id="@+id/emForragem"
        android:layout_below="@+id/aguardandoForragem"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Livre"
        android:onClick="listarLivre"
        android:id="@+id/livre"
        android:layout_below="@+id/emForragem"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
